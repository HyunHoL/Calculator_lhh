<Window x:Class="Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Border  Grid.Row="0" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="3">
            <TextBlock x:Name="textBlock" 
                       Text="{Binding DisplayText}"
                       FontSize="15" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       />
        </Border>

        <Button Grid.Row="0" 
                Grid.Column="3" 
                Content="⌫"
                x:Name="BtnBack"
                />
        <Button Grid.Row="0" 
                Grid.Column="4" 
                Content="AC" 
                x:Name="BtnClear" 
                />
        <Button Grid.Row="4" 
                Grid.Column="1" 
                Content="0" 
                x:Name="BtnZero"
                CommandParameter="0"
                Click="BtnZero_Click"/>
        <Button Grid.Row="3" 
                Grid.Column="0" 
                Content="1"
                x:Name="BtnOne" 
                CommandParameter="1"/>
        <Button Grid.Row="3" 
                Grid.Column="1" 
                Content="2"
                x:Name="BtnTwo" 
                CommandParameter="2"/>
        <Button Grid.Row="3" 
                Grid.Column="2" 
                Content="3" 
                x:Name="BtnThree" 
                CommandParameter="3"/>
        <Button Grid.Row="2" 
                Grid.Column="0"
                Content="4"
                x:Name="BtnFour"
                CommandParameter="4"/>
        <Button Grid.Row="2" 
                Grid.Column="1" 
                Content="5" 
                x:Name="BtnFive"
                CommandParameter="5"/>
        <Button Grid.Row="2"
                Grid.Column="2" 
                Content="6" 
                x:Name="BtnSix" 
                CommandParameter="6"/>
        <Button Grid.Row="1"
                Grid.Column="0" 
                Content="7" 
                x:Name="BtnSeven"
                CommandParameter="7"/>
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="8" 
                x:Name="BtnEight"
                CommandParameter="8"/>
        <Button Grid.Row="1"
                Grid.Column="2" 
                Content="9"
                x:Name="BtnNine"
                CommandParameter="9"/>
        <Button Grid.Row="4"
                Grid.Column="0" 
                Content="."
                x:Name="BtnDot" 
                CommandParameter="."/>
        <Button Grid.Row="4"
                Grid.Column="2"
                Content="=" 
                x:Name="BtnEqual"
                />
        <Button Grid.Row="4"
                Grid.Column="3"
                Content="/" 
                x:Name="BtnDivided"
                CommandParameter="/"/>
        <Button Grid.Row="3" 
                Grid.Column="3" 
                Content="*"
                x:Name="BtnMultiple"
                CommandParameter="*"/>
        <Button Grid.Row="2" 
                Grid.Column="3" 
                Content="-"
                x:Name="BtnMinus" 
                CommandParameter="-"/>
        <Button Grid.Row="1"
                Grid.Column="3"
                Content="+" 
                x:Name="BtnPlus" 
                CommandParameter="+"/>
        <Button Grid.Row="1"
                Grid.Column="4" 
                Content="sin"
                x:Name="BtnSin"
                CommandParameter="sin"/>
        <Button Grid.Row="2" 
                Grid.Column="4"
                Content="cos"
                x:Name="BtnCos" 
                CommandParameter="cos"/>
        <Button Grid.Row="3"
                Grid.Column="4"
                Content="tan"
                x:Name="BtnTan"
                CommandParameter="tan"/>
        <Button Grid.Row="4"
                Grid.Column="4" 
                Content="√ " 
                x:Name="BtnRoot"
                CommandParameter="root"/>
    </Grid>
</Window>
